{
  "manifest_version": 3,
  "name": "Karaoke Quick Play (YouTube)",
  "version": "1.0.0",
  "description": "Search a song, open YouTube results, and auto-play the top karaoke video.",
  "action": {
    "default_title": "Karaoke Quick Play",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/results*"
      ],
      "js": [
        "content_results.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "content_watch.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open_popup": {
      "suggested_key": {
        "default": "Alt+K"
      },
      "description": "Open Karaoke Quick Play popup"
    }
  }
}